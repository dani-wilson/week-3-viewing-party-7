<h2>Create a New User</h2>

<%= form_with model: @user, local: true, data: {turbo: false} do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, required: true %><br>
  <%= form.label :email %>
  <%= form.text_field :email, required: true, uniqueness: true %><br>
  <%= form.label :password, "Password:" %>
  <%= form.text_field :password, required: true %><br>
  <%= form.label :password_confirmation, "Confirm Password:" %>
  <%= form.text_field :password_confirmation, required: true %><br>
  <%= form.submit "Create New User" %>
<% end %>
